<!DOCTYPE html>
<html>
  <head>
    <title>ながのCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-white bg-white">
        <div class="container">

          <%= link_to root_path, class:"navbar-brand" do %>
            <div class="h2 border border-secondary mb-4">ながのCake</div>
          <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">


            <% if admin_signed_in? %>
              <li>
                <%= link_to class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">商品一覧</button>
                <% end %>
              </li>

              <li>
                <%= link_to about_path, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">会員一覧</button>
                <% end %>
              </li>

              <li>
                <%=link_to about_path, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">注文履歴一覧</button>
                <% end %>
              </li>

              <li>
                <%=link_to about_path, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">ジャンル一覧</button>
                <% end %>
              </li>

              <li>
                <%= link_to  destroy_admin_session_path, method: :delete, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">ログアウト</button>
                <% end %>
              </li>


            <% elsif customer_signed_in? %>
              <li>
                <%= link_to  class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">マイページ</button>
                <% end %>
              </li>

              <li>
                <%= link_to  class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">商品一覧</button>
                <% end %>
              </li>

              <li>
                <%=link_to class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">カート</button>
                <% end %>
              </li>

              <li>
                <%= link_to  destroy_public_session_path, method: :delete, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">ログアウト</button>
                <% end %>
              </li>


            <% else %>
              <li>
                <%= link_to about_path, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">About</button>
                <% end %>
              </li>

              <li>
                <%= link_to  class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">商品一覧</button>
                <% end %>
              </li>

              <li>
                <%=link_to new_customer_registration_path, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">新規登録</button>
                <% end %>
              </li>

              <li>
                <%= link_to customer_session_path, class:"nav-link text_dark" do %>
                  <button type="button" class="btn btn-outline-secondary mr-5">ログイン</button>
                <% end %>
              </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <hr color="black">
    
    <main>
    <%= yield %>
    </main>

    <footer>

    </footer>
  </body>
</html>
