<!DOCTYPE html>
<html>
  <head>
    <title>ながのCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-white bg-white">
        <div class="container">
          <%= link_to 'ながのCake', class:"navbar-brand" %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id), class:"nav-link text_dark" do %>
                  <i class="fas fa-home"></i>商品一覧
                <% end %>
              </li>

              <li>
                <%= link_to admins_path, class:"nav-link text_dark" do %>
                  <i class="fas fa-users"></i>会員一覧
                <% end %>
              </li>

              <li>
                <%=link_to items_path, class:"nav-link text_dark" do %>
                  <i class="fas fa-book-open"></i>注文履歴一覧
                <% end %>
              </li>
              
              <li>
                <%=link_to genres_path, class:"nav-link text_dark" do %>
                  <i class="fas fa-book-open"></i>ジャンル一覧
                <% end %>
              </li>

              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text_dark" do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                <% end %>
              </li>

            <% else %>

              <li>
                <%= link_to about_path, class:"nav-link text_dark" do %>
                  <i class="fas fa-link"></i>About
                <% end %>
              </li>
              
              <li>
                <%= link_to  class:"nav-link text_dark" do %>
                  <i class="fas fa-home"></i>商品一覧
                <% end %>
              </li>

              <li>
                <%=link_to new_user_registration_path, class:"nav-link text_dark" do %>
                  <i class="fas fa-user-plus"></i>新規登録
                <% end %>
              </li>

              <li>
                <%= link_to new_user_session_path, class:"nav-link text_dark" do %>
                  <i class="fas fa-sign-in-alt"></i>ログイン
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      

      </nav>
    </header>
    <%= yield %>
  </body>
</html>
