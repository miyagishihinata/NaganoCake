<div class="container">
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <% if @item.errors.any? %>
      <h3><%= @item.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <div class="row mt-5">

    <div class="col-4">
      <%= image_tag @item.get_image(500,500) %>
    </div>

    <div class="col-6">
     <h4><%= @item.name %></h4>

      <div class="form-group row mt-1 ml-1">
       <h5><%= @item.introduction %></h5>
      </div>

      <div class="form-group row mt-5 ml-1">
        <h4>￥<%= @item.with_tax_price.to_s(:delimited) %></h4>
        (税込)
      </div>

      <div class="form-group ml-2">
        <%= form_with model: @cart_item, url:cart_items_path do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount,  *[1..10], include_blank: "個数選択" %>

          <%= f.submit 'カートに入れる', class: "btn btn-success offset-md-1" %>
        <% end %>
      </div>

    </div>

  </div>


</div>