<div class="container">
  <div class="form-inline">
    <h3 class="mt-4 mb-2">商品一覧</h3>
    <h5 class="mt-4 mb-2">(全<%= @items.count %>件)</h5>
  </div>


  <div class="row">
    <div class="col-12">
    <% @items.each do |item| %>
      <div class="form-group row">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(200,200) %>
      <% end %>
      </div>

      <div class="form-group row">
        <label class="mr-4">商品名</label>
        <%= item.name %>
      </div>

      <div class="form-group row">
        ￥<%= cart_item.item.with_tax_price%>
      </div>

      <div class="px-5 mx-auto col-10 col-sm-9">
        <%= paginate @items %>
      </div>
    <% end %>
　　</div>
  </div>
</div>