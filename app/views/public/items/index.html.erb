<div class="container">
  <div class="form-inline">
    <h3 class="mt-4 mb-2">商品一覧</h3>
    <h5 class="mt-4 mb-2">(全 件)</h5>
  </div>


  <div class="row">
    <div class="px-3 mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
    <% @items.each do |item| %>
      <div class="form-group row">
      <%= image_tag item.get_image(200,200) %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">商品名</label>
        <%= item.name %>
      </div>

      <div class="form-group row">
        ￥<%= item.add_tax_price.to_s(:delimited) %>
      </div>

      <div class="px-5 mx-auto col-10 col-sm-9">
        <%= paginate @items %>
      </div>
    <% end %>
　　</div>
  </div>
</div>