<div class="container">
  <div class="row">
    <h5 class="offset-md-1 text-center mt-4 mb-4 mr-5" style="background-color:#dcdcdc;">
      &emsp;ログイン&emsp;
    </h5>
  </div>

  <div class="row">
    <h6 class="offset-md-1 text-center mt-4 mb-4 mr-5" style="background-color:#dcdcdc;">
      &emsp;会員の方はこちらからログイン&emsp;
    </h6>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <label class="col-md-2 offset-md-1" for="email">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
      </div>

      <div class="form-group row">
        <label class="col-md-2 offset-md-1" for="encrypted_password">パスワード</label>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-md-4" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary col-md-2 offset-md-3 mt-3" %>
      </div>
    <% end %>


<%= render "public/shared/links" %>
</div>
