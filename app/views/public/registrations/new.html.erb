<div class="container">
  <div class="row">
    <h5 class="offset-md-1 text-center mt-4 mb-4 mr-5" style="background-color:#dcdcdc;">
      &emsp;新規会員登録&emsp;
    </h5>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <label class="col-md-5" for="public_name">名前</label>
        <div class="form-inline">
        &emsp;(姓)&emsp;<%= f.text_field :last_name %>
        &emsp;(名)&emsp;<%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="public_name_kana">フリガナ</label>
        <div class="form-inline">
        &emsp;(姓)&emsp;<%= f.text_field :last_name_kana %>
        &emsp;(名)&emsp;<%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="email">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="postal_code">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="address">住所</label>
        <%= f.text_field :address, class: "col-md-8" %>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="telephone_number">電話番号(ハイフンなし)</label>
        <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="encrypted_password">パスワード(6文字以上)</label>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group row">
        <label class="col-md-5" for="encrypted_password">パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success col-md-4 offset-md-5 mt-3" %>
      </div>
    <% end %>

  <%= render "public/shared/links" %>
  </div>
</div>
