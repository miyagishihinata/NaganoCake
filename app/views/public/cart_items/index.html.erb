<div class="container">
  <div class="row">
    <div class="col-3">
      <h5 class="text-center mt-4 mb-4 mr-5" style="background-color:#dcdcdc;">
        ショッピングカート
      </h5>
    </div>

    <div class="col-8 text-right">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger col-md-3 ml-3 mt-4", "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-12">
  <table class="table table-bordered mt-3">

    <thead style="background-color:#f5f5f5;">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(60,60) %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price.to_s(:delimited) %>
        </td>
        <td>
          <%= form_with model: cart_item do |f| %>
            <%= f.hidden_field :item_id, :value => cart_item.item.id %>
            <%= f.select :amount,  *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.subtotal.to_s(:delimited) %>
        </td>
        <td>
          <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<div class="container">
  <div class="row">
    <div class="col-8">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary col-md-3 mt-3" %>
    </div>
    <div class="col-2">
      <label class="ml-5 mt-3"><h5 class="font-weight-bold ml-3">合計金額</h5></label>
    </div>

    <div class="col-2">
      <% @cart_items.each do |cart_item| %>
          <h5 class="mt-3 ml-4"><%= @total += cart_item.subtotal %>円</h5>
      <% end %>
    </div>
  </div>
</div>


   <div class="col-12 row mt-5 offset-md-4">
     <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success col-md-2" %>
   </div>

  </div>
</div>

