<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;配送先編集&emsp;
  </h5>
</div>

<div class="container">
  <div class="row ml-4">
    <div class="col-7">


   <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <div class="form-group row">
        <label class="col-md-4">郵便番号(ハイフンなし)</label>
          <%#= f.text_field :postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">住所</label>
          <%#= f.text_field :address, class: "col-md-8" %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">宛名</label>
          <%#= f.text_area :name %>
      </div>

      <div class="form-group row">
        <%= f.submit '編集内容を保存', class: "btn btn-success col-md-4 offset-md-4 mt-3 mr-5" %>
        
      </div>

    <% end %>

    </div>
  </div>
</div>

