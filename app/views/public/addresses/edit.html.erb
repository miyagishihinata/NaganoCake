<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;配送先編集&emsp;
  </h5>
</div>

<div class="container">
  <div class="row mr-5">
    <div class="col-12">

   <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <div class="form-group row">
        <label class="col-md-3">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">住所</label>
          <%= f.text_field :address, class: "col-md-5" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">宛名</label>
          <%= f.text_field :name %>
          <%= f.submit '編集内容を保存', class: "btn btn-success col-md-2 offset-md-4" %>
      </div>

   <% end %>

    </div>
  </div>
</div>

