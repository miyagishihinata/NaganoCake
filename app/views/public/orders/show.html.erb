<div class="container">
  <div class="row">
    <h5 class="text-center mt-4 mb-4 ml-5" style="background-color:#dcdcdc;">
      &emsp;注文履歴詳細&emsp;
    </h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="font-weight-bold mb-2">注文情報</div>

        <div class="row mb-1">
          <label class="col-md-3 ml-2">注文日</label>
           <%= @order.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class="row mb-1">
          <label class="col-md-3 ml-2">配送先</label>
           〒<%= @order.postal_code %><br>
             <%= @order.address %><br>
             <%= @order.name %>
        </div>
        <div class="row mb-1">
          <label class="col-md-3 ml-2">支払方法</label>
           <%= @order.payment_method_i18n %>
        </div>
        <div class="row">
          <label class="col-md-3 ml-2">ステータス</label>
           <%= @order.status_i18n %>
        </div>
    </div>
    <div class="col-4">
      <div class="font-weight-bold mb-2">請求情報</div>

        <div class="row mb-1">
          <label class="col-md-3 ml-2">商品合計</label>
           <%= @total %>
        </div>
        <div class="row mb-1">
          <label class="col-md-3 ml-2">配送料</label>
           <%= @order.shipping_cost %>円
        </div>
        <div class="row mb-1">
          <label class="col-md-3 ml-2">ご請求額</label>
           <%= @order.total_payment.to_s(:delimited) %>円
        </div>
    </div>

  </div>

  <table class="table table-bordered mt-3">

    <thead style="background-color:#f5f5f5;">
      <tr>
       <th>商品</th>
       <th>単価(税込)</th>
       <th>個数</th>
       <th>小計</th>
      </tr>
    </thead>

    <tbody>
    <% @order.order_details.each do |order_detail| %>
      <tr>
       <td>
        <%= order_detail.item.name %>
       </td>
       <td>
        <%= order_detail.price %>
       </td>
       <td>
        <%= order_detail.amount %>
       </td>
       <td>
        <%= order_detail.amount*order_detail.price %>
       </td>

      </tr>
    <% end %>
    </tbody>

  </table>
</div>

