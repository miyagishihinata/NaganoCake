<div class="container">
  <div class="row">
    <h5 class="offset-md-1 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
      &emsp;ジャンル編集&emsp;
    </h5>
  </div>


  <div class="form-group row">
    <label class="col-md-2 mb-4"><small>ジャンル名</small></label>
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <%= f.text_field :name %>
      <%= f.submit "変更を保存", class: "btn btn-success ml-5" %>
    <% end %>
  </div>
</div>
