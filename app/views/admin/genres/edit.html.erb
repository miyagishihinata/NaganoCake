<h5 class="col-md-2 offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
  ジャンル編集
</h5>

<%= form_with model: @genre, url: update_genre_path(@genre.id), method: :patch do |f| %>
  <label class="col-md-3 mb-4">ジャンル名</label>
  
  <div class="form-group row">
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group row">
    <%= f.submit "変更を保存", class: "btn btn-primary col-md-3 offset-md-4 mt-3" %>
  </div>
<% end %>