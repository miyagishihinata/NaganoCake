<div class="container">
  <div class="row">
    <h5 class="col-md-3 offset-md-1 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
      ジャンル一覧・追加
    </h5>
  </div>

    <div class="form-group row">
      <label class="col-md-3 mb-4">ジャンル名</label>
      <%= f.text_field :name, placeholder: "ジャンル名" %>
    </div>

    <div class="px-5 col-10 col-sm-9">
      <table class="table">

      <thead style="background-color:#f5f5f5;">
        <tr><th>ステータス</th></tr>
      </thead>

    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
          
          <div class="form-group row">
            <%= link_to edit_admin_genre_path do %>
              <%= f.submit '編集する', class: "btn btn-success" %>
            <% end %>
          </div>
        </td>
      </tr>


    <% end %>
    </tbody>
      </table>

   </div>

</div>
