<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;注文履歴一覧&emsp;
  </h5>
</div>

<div class="mx-auto col-8 col-sm-8">
  <table class="table">

    <thead style="background-color:#f5f5f5;">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
         <%= order.created_at.strftime('%Y/%m/%d %T') %>
        </td>
        <td>
         <%= order.customer.last_name %><%= order.customer.first_name %>
        </td>
        <td>
         <% order.order_details.each do |order_detail| %>
           <%  @total += order_detail.amount %>
         <% end %>
         <%= @total %>
        </td>
      </tr>


    </tbody>
  </table>

    <div class="px-5 mx-auto col-10 col-sm-9">
      <%= paginate @orders %>
    </div>
    <% end %>

</div>
