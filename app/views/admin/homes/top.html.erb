<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;注文履歴一覧&emsp;
  </h5>
</div>

<div class="mx-auto col-8 col-sm-8">
  <table class="table">

    <thead style="background-color:#f5f5f5;">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
           <%= order.created_at.strftime('%Y/%m/%d %T') %>
          <% end %>
        </td>
        <td>
         <%= order.customer.last_name %><%= order.customer.first_name %>
        </td>
        <td>
         <% order.order_details.each do |order_detail| %>
           <%  @total += order_detail.amount %>
         <% end %>
         <%= @total %>
        </td>
        <td>
          <%= order.status_i18n %>
        </td>
    <% end %>
      </tr>


    </tbody>
  </table>
</div>

<div class="container">
  <div class="col-12 offset-md-5 mb-3">
    <%= paginate @orders %>
  </div>
</div>
