<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;注文履歴一覧&emsp;
  </h5>
</div>

<div class="px-5 mx-auto col-10 col-sm-9">
  <table class="table">

    <thead style="background-color:#f5f5f5;">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>

    <tbody>

      <tr>
        <td>
         <%#= order_details.created_at.strftime('%Y/%m/%d%t') %>
        </td>
        <td>
         <%#= customer.last_name %><%#= customer.first_name %>
        </td>
        <td>
         <%#= order_details.amount %>
        </td>
      </tr>

    </tbody>
  </table>
</div>
