<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
   &emsp;<%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細&emsp;
  </h5>
</div>


<div class="container">
  <div class="row ml-5">
    <div class="col-7">

      <div class="form-group row">
        <label class="col-md-4">会員ID</label>
        <%= @customer.id %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">氏名</label>
        <%= @customer.last_name %> <%= @customer.first_name %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">フリガナ</label>
        <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">郵便番号</label>
        <%= @customer.postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">住所</label>
        <%= @customer.address %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">電話番号</label>
        <%= @customer.telephone_number %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">メールアドレス</label>
        <%= @customer.email %>
      </div>


      <div class="form-group row">
        <label class="col-md-4">会員ステータス</label>
         <% if @customer.is_deleted == true %>
          退会
         <% else %>
          有効
         <% end %>
      </div>



      <div class="form-inline">
        <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success col-md-2 mt-3" %>
        <%= link_to '注文履歴一覧を見る', admin_path, class: "btn btn-primary col-md-4 mt-3 ml-5" %>
      </div>

    </div>
  </div>
</div>