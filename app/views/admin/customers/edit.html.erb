<h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
  &emsp;<%=　@customer.last_name_kana %><%= @customer.first_name %>さんの会員情報編集&emsp;
</h5>


      <div class="form-group row">
        <label class="col-md-3 mb-4">会員ID</label>
          <%= f.text_area :introduction, class: "col-md-8" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">氏名</label>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">フリガナ</label>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">郵便番号</label>
          <%= f.text_field :postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">住所</label>
          <%= f.text_field :address, class: "col-md-8" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">電話番号</label>
          <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">メールアドレス</label>
          <%= f.text_field :email %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">会員ステータス</label>

          <div class="form-check form-check-inline">
            <%= f.radio_button :is_deleted, true, checked: true %>
            <label class="form-check-label" for="inlineRadio1">有効</label>
          </div>

         <div class="form-check form-check-inline">
            <%= f.radio_button :is_deleted, false %>
            <label class="form-check-label" for="inlineRadio2">退会</label>
         </div>
      </div>

      <div class="form-group row">
        <%= f.submit '変更を保存', class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>