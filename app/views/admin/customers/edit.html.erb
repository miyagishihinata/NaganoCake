<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集&emsp;
  </h5>
</div>

<div class="container">
  <div class="row ml-4">
    <div class="col-7">

    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

      <div class="form-group row">
        <label class="col-md-4">会員ID</label>
          <%= @customer.id %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">氏名</label>
        <div class="form-inline">
          <%= f.text_field :last_name %>&emsp;
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-4">フリガナ</label>
        <div class="form-inline">
          <%= f.text_field :last_name_kana %>&emsp;
          <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-4">郵便番号</label>
          <%= f.text_field :postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">住所</label>
          <%= f.text_field :address, class: "col-md-8" %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">電話番号</label>
          <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">メールアドレス</label>
          <%= f.text_field :email %>
      </div>

      <div class="form-group row">
        <label class="col-md-4">会員ステータス</label>

          <div class="form-check form-check-inline">
            <%= f.radio_button :is_deleted, false, checked: true %>
            <label class="form-check-label" for="inlineRadio1">有効</label>
          </div>

         <div class="form-check form-check-inline">
            <%= f.radio_button :is_deleted, true %>
            <label class="form-check-label" for="inlineRadio2">退会</label>
         </div>
      </div>

      <div class="form-group row">
        <%= f.submit '変更を保存', class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>

    <% end %>

    </div>
  </div>
</div>