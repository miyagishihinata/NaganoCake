<h5 class="col-md-1 offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
  さんの会員情報編集
</h5>


      <div class="form-group row">
        <label class="col-md-3 mb-4">会員ID</label>
          <%= f.text_area :introduction, class: "col-md-8",  placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">氏名</label>

      </div>

      <div class="form-group row">
        <label class="col-md-3">フリガナ</label>
          <%= f.text_field :price, class: "col-md-8", placeholder: "1000" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">会員ステータス</label>

          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
            <label class="form-check-label" for="inlineRadio1">有効</label>
          </div>

         <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
            <label class="form-check-label" for="inlineRadio2">退会</label>
         </div>
      </div>

      <div class="form-group row">
        <%= f.submit '新規登録', class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>