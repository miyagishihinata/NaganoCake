<div class="row">
  <h5 class="col-md-1 offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    商品詳細
  </h5>
</div>

<div class="container">

  <div class="row">
    <div class="px-3 mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

    <% @items.each do |item| %>

      <div class="form-group row">

      </div>

      <div class="form-group row">
        <label class="col-md-3">商品名</label>

      </div>

      <div class="form-group row">
        <label class="col-md-3">商品説明</label>

      </div>

      <div class="form-group row">
        <label class="col-md-3">ジャンル</label>

      </div>

      <div class="form-group row">
        <label class="col-md-3">税抜価格</label>

      </div>

      <div class="form-group row">
        <label class="col-md-3">販売ステータス</label>


      </div>
    <% end %>

    <%= link_to new_admin_item_path do %>
      <div class="form-group row">
        <%= f.submit '編集する', class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>
    <% end %>


    </div>
  </div>
</div>