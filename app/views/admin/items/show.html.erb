<div class="row">
  <h5 class="offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
    &emsp;商品詳細&emsp;
  </h5>
</div>

<div class="container">

  <div class="row">
    <div class="px-3 mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <div class="form-group row">
      <%= image_tag @item.get_image(200,200) %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">商品名</label>
        <%= @item.name %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">商品説明</label>
        <%= @item.introduction %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">ジャンル</label>
        <%= @item.name %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">
        税込価格<br>
        (税抜価格)
        </label>

        <%= @item.with_tax_price.to_s(:delimited) %>
        (<%= @item.price %>)円
      </div>

      <div class="form-group row">
        <label class="col-md-3">販売ステータス</label>
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </div>

      <div class="form-group row">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>



    </div>
  </div>
</div>