<div class="container">
  <div class="row">
    <h5 class="col-md-2 offset-md-2 text-center mt-4 mb-4" style="background-color:#dcdcdc;">
      商品新規登録
    </h5>
  </div>


  <div class="row">
    <div class="px-3 mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

    <%= form_with model: @item do |f| %>

      <div class="form-group row">
        <label class="col-md-3">商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">商品名</label>
          <%= f.text_field :name, class: "col-md-8", placeholder: "商品名" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">商品説明</label>
          <%= f.text_area :introduction, class: "col-md-8", placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group row">
        <label class="col-md-3">税抜価格</label>
          <%= f.text_field :price, class: "col-md-8", placeholder: "1000" %>
      </div>

      <div class="form-group row">
        <%= f.submit '新規登録', class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>
    <% end %>

    </div>
  </div>
</div>